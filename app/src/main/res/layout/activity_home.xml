<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#aeaeae"
        />
    <com.yinglan.alphatabs.AlphaTabsIndicator
        android:id="@+id/alphaIndicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal"
        android:background="@drawable/bg_homepage_bottom">

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:tabIconNormal="@drawable/tab_home_bottom_shouye"
            app:tabIconSelected="@drawable/tab_home_bottom_shouyes"
            />
        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_gravity="center"
            app:tabIconNormal="@drawable/tab_home_bottom_quanzi"
            app:tabIconSelected="@drawable/tab_home_bottom_quanzis"
            />
        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_60"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/attraa"
            app:tabIconNormal="@drawable/tab_home_bottom_gouwuche"
            app:textColorNormal="#999999"
            />
        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:tabIconNormal="@drawable/tab_home_bottom_zhangdan"
            app:tabIconSelected="@drawable/tab_home_bottom_zhangdans"
            />
        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:tabIconNormal="@drawable/tab_home_bottom_wode"
            app:tabIconSelected="@drawable/tab_home_bottom_wodes"
            />
    </com.yinglan.alphatabs.AlphaTabsIndicator>

</LinearLayout>